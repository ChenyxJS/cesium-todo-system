<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenyx.mapper.ExtMiniRolePermissionMapper">

    <resultMap id="BaseDTOResultMap" extends="BaseResultMap" type="com.chenyx.entity.dto.MiniRolePermissionDTO">

    </resultMap>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chenyx.entity.MiniRolePermission">
                <id column="mrpe_id" property="mrpeId"/>
                <result column="mrpe_role_id" property="mrpeRoleId"/>
                <result column="mrpe_code" property="mrpeCode"/>
                <result column="mrpe_name" property="mrpeName"/>
                <result column="mrpe_control_url" property="mrpeControlUrl"/>
                <result column="mrpe_is_login" property="mrpeIsLogin"/>
                <result column="mrpe_type" property="mrpeType"/>
                <result column="mrpe_status" property="mrpeStatus"/>
                <result column="mrpe_db_create_date" property="mrpeDbCreateDate"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        mrpe_id, mrpe_role_id, mrpe_code, mrpe_name, mrpe_control_url, mrpe_is_login, mrpe_type, mrpe_status, mrpe_db_create_date
    </sql>


    <!--批量插入-->
    <insert id="batchAdd" parameterType="java.util.List">
        insert into mini_role_permission
        (
                mrpe_role_id,
                mrpe_code,
                mrpe_name,
                mrpe_control_url,
                mrpe_is_login,
                mrpe_type,
                mrpe_status,
                mrpe_db_create_date
        )
        <trim suffixOverrides=",">
            <foreach collection="list" item="item">
                <trim prefix=" (" suffix=")" suffixOverrides=",">









                </trim>
                ,
            </foreach>
        </trim>
    </insert>

    <!--    加锁查询-->
    <select id="getByIdForUpdate" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from mini_role_permission
        where
                mrpe_id = #{mrpeId}








        for update
    </select>
</mapper>
